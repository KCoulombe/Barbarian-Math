<?xml version = "1.0"?>
<class>
<!--Holds weapon data-->
	<modifier>
		<name>Dagger</name><!--Name as shown in app-->
		<tags>weapon finesse light</tags><!--Tags to identify and give properties-->
		<values>1d4 strMod dexMod</values><!--Values that influence the damage.
		This may include things like: 1d8 strMod magicBonus:2 fire:1d8-->
		<limits>attack</limits><!--Represents limitations on how it may be applied.
		weapon should be sufficient for weapons-->
		<cost></cost>
	</modifier>
	<modifier>
		<name>Shortsword</name>
		<tags>weapon finesse light</tags>
		<values>1d6</values>
		<limits>attack</limits>
		<cost></cost>
	</modifier>
	<modifier>
		<name>Longsword</name>
		<tags>weapon versatile</tags>
		<values>1d4</values>
		<limits>attack</limits>
		<cost></cost>
	</modifier>
	<modifier>
		<name>Greatsword</name>
		<tags>weapon twoHand</tags>
		<values>1d4</values>
		<limits>attack</limits>
		<cost></cost>
	</modifier>
</class>